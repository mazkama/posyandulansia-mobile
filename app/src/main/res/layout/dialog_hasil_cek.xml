<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Pemeriksaan Kesehatan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"/>

        <TextView
            android:id="@+id/titleTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="16dp"
            android:text="Senin, 17 Agustus 1975"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Data Pemeriksaan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:radius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Berat Badan:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtHasilBB"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Tekanan Darah:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtHasilTD"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Gula Darah:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtHasilGulaDarah"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Kolestrol:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtHasilKolestrol"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Asam Urat:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtHasilAsamUrat"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Diagnosa -->
        <TextView
            android:text="Diagnosa:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:paddingTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDiagnosaBB"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Kesimpulan -->
        <TextView
            android:text="Kesimpulan:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtKualitasKesehatan"
            android:textSize="15sp"
            android:textColor="#000000"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Solusi -->
        <TextView
            android:text="Solusi:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtSolusiKesehatan"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
